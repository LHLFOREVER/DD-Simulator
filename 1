import tkinter as tk

def on_click():
    print("Button clicked!")

def on_hover(event):
    btn.configure(bg='#ADD8E6')  # Change color on hover

def on_leave(event):
    btn.configure(bg='#D3D3D3')  # Reset color when mouse leaves

root = tk.Tk()
btn = tk.Button(root, text="Click Me", command=on_click, bg='#D3D3D3')
btn.pack(pady=20)

# Bind the hover effects
btn.bind("<Enter>", on_hover)
btn.bind("<Leave>", on_leave)

root.mainloop()
