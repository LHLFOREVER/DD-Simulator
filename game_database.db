import sqlite3

# Connect to the database 
conn = sqlite3.connect('game_database.db')
cursor = conn.cursor()

# Creating tables for each entity in the database

# Playable Characters and Friendly NPCs
cursor.execute('''
    CREATE TABLE Person (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Status TEXT,
        Affiliation TEXT,
        HP INTEGER,
        STR INTEGER,
        DEX INTEGER,
        VIT INTEGER,
        INT INTEGER,
        SPD INTEGER,
        Species TEXT,
        Level INTEGER,
        Experience INTEGER
    )
''')

cursor.execute('''
    CREATE TABLE Affiliation (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Group TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Species (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Race TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Status (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        StatusType TEXT,
        Attribute1 TEXT,
        Attribute2 TEXT,
        Attribute3 TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Civilian (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        CivilianStatus TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Adventurer (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        AdventurerStatus TEXT,
        Rank TEXT,
        Role TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Knight (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Weapon TEXT,
        Rank TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Nobility (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Rank TEXT,
        NobilityStatus TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Enemy (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Status TEXT,
        Affiliation TEXT,
        HP INTEGER,
        STR INTEGER,
        DEX INTEGER,
        VIT INTEGER,
        INT INTEGER,
        SPD INTEGER,
        Species TEXT,
        Level INTEGER,
        Experience INTEGER
    )
''')

cursor.execute('''
    CREATE TABLE Wild_Mobs (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        MobType TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Thinker_Mobs (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        MobType TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Weapon (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        WeaponType TEXT,
        SubType TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Environment (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Region TEXT,
        Location TEXT
    )
''')

cursor.execute('''
    CREATE TABLE LocSize (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        Size TEXT
    )
''')

cursor.execute('''
    CREATE TABLE BuffsnDebuffs (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        BuffType TEXT,
        BuffName TEXT
    )
''')

cursor.execute('''
    CREATE TABLE Multiplier (
        ID INTEGER PRIMARY KEY AUTOINCREMENT,
        MultiplierType TEXT,
        Value TEXT
    )
''')

# Save (commit) the changes and close the connection
conn.commit()
conn.close()


